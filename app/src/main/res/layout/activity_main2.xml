<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="532dp"
        android:background="#ede8e8">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo"
            android:id="@+id/titulo"
            android:layout_alignParentTop="true"
            android:singleLine="false"
            android:textSize="60sp"
            android:textColor="#fefefe"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="#83d8d3"
        />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:id="@+id/poster"
            android:background="@android:drawable/sym_def_app_icon"
            android:layout_below="@+id/titulo"
            android:layout_alignParentStart="false"
            android:adjustViewBounds="false"
            android:paddingTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ano"
            android:id="@+id/ano"
            android:layout_below="@+id/titulo"
            android:textSize="25sp"
            android:paddingTop="10dp"
            android:textColor="#7b7676"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/poster"
            android:paddingLeft="80dp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="duração"
            android:id="@+id/duracao"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/poster"
            android:layout_below="@+id/ano"
            android:textSize="25sp"
            android:textColor="#FF7B7676"
            android:layout_alignStart="@+id/ano"
            android:paddingLeft="60dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nota"
            android:id="@+id/nota"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/poster"
            android:layout_below="@+id/duracao"
            android:paddingBottom="15dp"
            android:textColor="#FF7B7676"
            android:paddingLeft="80dp"
            android:typeface="sans"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descrição do filme. Texto mediano contendo algumas linhas blabla blablansu a i b d jn dakfrbkrabjk c"
            android:id="@+id/descricao"
            android:layout_below="@+id/poster"
            android:layout_alignParentStart="true"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="20sp"
            android:textColor="#FF7B7676" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Trailers:"
            android:id="@+id/textView2"
            android:layout_below="@+id/descricao"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            android:textColor="#FF7B7676"
            android:paddingLeft="10dp" />

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="MARK AS FAVORITE"
            android:id="@+id/favorito"
            android:checked="false"
            android:layout_below="@+id/nota"
            android:layout_toEndOf="@+id/poster"
            android:layout_marginStart="47dp"
            android:background="#83d8d3"
            android:textColor="#8e8c8c"
            android:textStyle="bold"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src = "@android:drawable/ic_media_play"
            android:background="#ede8e8"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@android:drawable/ic_media_play"
            android:background="#ede8e8"
            android:paddingLeft="10dp"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trailer 1"
            android:id="@+id/textView"
            android:textColor="#FF7B7676"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:textSize="20sp"
            android:layout_alignTop="@+id/imageButton"
            android:paddingTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trailer 2"
            android:id="@+id/textView3"
            android:textColor="#FF7B7676"
            android:textSize="20sp"
            android:paddingTop="2dp"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_below="@+id/imageButton"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>